{% set page = 'home' %}
{% extends "base.html.twig" %}

{% block title %}Main page{% endblock %}

{% block content %}
	<div class="page-header">
		<h1>Tool for adding daily highlights to RescueTime with labels</h1>
	</div>
	<p class="lead"></p>
	{% if result %}
	<div class="alert alert-info" role="alert">
		<h4>Result:</h4>
		<p>{{ result }}</p>
	</div>
	{% endif %}
	<form class="form-horizontal" method="post">
		<div class="form-group">
			<label for="inputLabel" class="col-sm-2 control-label">Label</label>
			<div class="col-sm-10">
				<select name="label" id="inputLabel" class="form-control">
					{% for key, value in labels %}
					<option value="{{ key }}">{{ value }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="inputMessage" class="col-sm-2 control-label">Text</label>
			<div class="col-sm-10">
				<input name="message" type="text" class="form-control" id="inputMessage" placeholder="&quot;time&quot; is default">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-default">Add</button>
			</div>
		</div>
	</form>
{% endblock %}
